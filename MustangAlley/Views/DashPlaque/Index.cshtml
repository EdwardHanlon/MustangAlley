@model MustangAlley.ViewModels.DashPlaque.DashPlaqueViewModel
@using PaulMiami.AspNetCore.Mvc.Recaptcha

@{
    ViewData["Title"] = "Dash Plaque Details";
}

<form asp-controller="DashPlaque" asp-action="Generate" method="post" class="form-horizontal" role="form">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div id="person" class="jumbotron" style="height: auto; min-height: 200px; max-height: 290px; margin-top: -1%; display: flex">
        <div class="col-md-6">
            <div class="row">
                <div class="form-group">
                    <label asp-for="Year" class="col-md-3 control-label"></label>
                    <input asp-for="Year" class="form-control" placeholder="Year" />
                    <span asp-validation-for="Year" class="text-danger" style="padding-left: 140px"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BodyStyle" class="col-md-3 control-label"></label>
                    <input asp-for="BodyStyle" class="form-control" placeholder="Model" />
                    <span asp-validation-for="BodyStyle" class="text-danger" style="margin-bottom: -40px; padding-left: 140px"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Owner" class="col-md-3 control-label" style="width: auto; margin-left: -2px"></label>
                    <input asp-for="Owner" class="form-control" placeholder="Owner Name" />
                    <span asp-validation-for="Owner" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-4">
            <recaptcha multi-site="false" data-callback="recaptchaCallback"></recaptcha>
        </div>

        <div class="col-md-offset-4">
            <button id="registerBtn" class="btn btn-primary btn-lg" disabled="disabled">Generate</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
